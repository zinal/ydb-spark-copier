<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="STDERR" target="SYSTEM_ERR">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %5T %21.21c{1}:%-4L %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Logger name="copytab" level="info"/>
    <Logger name="org.sparkproject" level="warn"/>
    <Logger name="org.apache.spark" level="warn"/>
    <Logger name="org.apache.hadoop" level="warn"/>
    <Logger name="org.apache.parquet" level="warn"/>
    <Logger name="tech.ydb" level="warn"/>
    <Logger name="tech.ydb.spark" level="info"/>
    <Root level="info">
      <AppenderRef ref="STDERR"/>
    </Root>
  </Loggers>
</Configuration>
